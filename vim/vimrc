" Vundle!
set nocompatible               " be iMproved
filetype off                   " required!

set rtp+=~/.vim/bundle/vundle/
call vundle#rc()

" let Vundle manage Vundle
" required!
Bundle 'gmarik/vundle'

" My bundles
Bundle 'groenewege/vim-less'
Bundle 'scrooloose/nerdtree'
Bundle 'scrooloose/syntastic'
Bundle 'majutsushi/tagbar'
Bundle 'tpope/vim-fugitive'
Bundle 'tpope/vim-cucumber', {'rtp': 'vim/'}
Bundle 'tpope/vim-haml'
Bundle 'tpope/vim-rails'
Bundle 'tpope/vim-bundler'
Bundle 'vim-ruby/vim-ruby'
Bundle 'git://git.wincent.com/command-t.git'
Bundle 'flazz/vim-colorschemes'
Bundle 'Valloric/YouCompleteMe'

let mapleader = ","

" Pretty colours
syntax on
colorscheme made_of_code

" Pretty fonts
set guifont=Inconsolata-dz\ for\ Powerline:h10

" Pretty status line
source /usr/local/lib/python2.7/site-packages/powerline/ext/vim/powerline.vim
set laststatus=2

" Indentation
filetype plugin indent on
set tabstop=2
set shiftwidth=2
set expandtab
set smarttab

" Force the indentation to be correct when shifting
set shiftround

" Backspace through lines too
set backspace=indent,eol,start

" Ignore files I don't want to open in vim
set wildignore=*.o,*~,*.pyc,*.jpg,*.gif,*.png

" No trailing spaces
" See http://vim.wikia.com/wiki/Remove_unwanted_spaces
" Commented out because I think this is really slowing down my saves
" autocmd BufWritePre * :%s/\s\+$//e

" Make searching be incremental (e.g. search as you type)
set incsearch

" Show the matching brace when a new one is added
set showmatch

" Use ctrl-[hjkl] to select the active split!
nmap <silent> <c-k> :wincmd k<CR>
nmap <silent> <c-j> :wincmd j<CR>
nmap <silent> <c-h> :wincmd h<CR>
nmap <silent> <c-l> :wincmd l<CR>

" More natural split opening position
set splitright

" Move the splits arround!
" Doesn't work :(
"nmap <silent> <c-s-k> <C-W>K
"nmap <silent> <c-s-j> <C-W>J
"nmap <silent> <c-s-h> <C-W>H
"nmap <silent> <c-s-l> <C-W>L

" Open Nerd Tree
nmap <leader>n :NERDTree<cr>

" Open tagbar
nmap <leader>s :TagbarToggle<CR>

" Close current buffer
nmap <leader>q :bd<CR>
